{
    "name": "sql-risk-analyzer/sql-analyzer",
    "description": "A lightweight, web-based static SQL analyzer that detects common performance and stability risks before execution.",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan-strict-rules": "^1.5",
        "vimeo/psalm": "^5.14",
        "php-coveralls/php-coveralls": "^2.5",
        "php-mock/php-mock-phpunit": "^2.6",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpmd/phpmd": "^2.13",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage",
        "analyze": "phpstan analyse -l max -c phpstan.neon",
        "psalm": "psalm --show-info=false",
        "cs-check": "phpcs --standard=PSR12",
        "cs-fix": "phpcbf --standard=PSR12",
        "md": "phpmd app text phpmd.xml",
        "check": [
            "@cs-check",
            "@analyze",
            "@psalm",
            "@md",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "process-timeout": 1800
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}